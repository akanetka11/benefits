{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    // "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "removeComments": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@store/*": ["src/store/*"],
      "@navigation/*": ["src/navigation/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "declaration.d.ts"]
}
